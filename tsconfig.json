{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": ".main",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
